<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-jms="http://www.springframework.org/schema/integration/jms"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
        http://www.springframework.org/schema/integration/jms http://www.springframework.org/schema/integration/jms/spring-integration-jms.xsd">

    <!-- crea un channel para el listener que va a consumir los mensajes -->
    <int:channel id="notifications"/>
    <int:channel id="publishTasks"/>
    <int:channel id="processTask"/>

    <int:channel id="reprocessSubmit"/>

    <int:channel id="sendService"/>
    <int:channel id="reprocessService"/>

    <!-- define un adapter que rutea a el processListenerChannel los mensajes
	que llegan a la queue -->
    <int-jms:inbound-channel-adapter channel="notifications"
                                     destination-name="${queue.process.notification}" message-converter="messageConverter"
                                     receive-timeout="${queue.receive.timeout}" connection-factory="connectionFactory"/>

    <!-- service que sera activado cuando un mensaje llegue a la queue -->
    <int:service-activator id="notificationActivator"
                           input-channel="notifications"
                           ref="messageHandler" method="processService"/>

    <int-jms:outbound-channel-adapter channel="publishTasks"
                                      destination-name="${queue.process.tasks}" message-converter="messageConverter"
                                      time-to-live="${queue.message.timetolive}" explicit-qos-enabled="true"
                                      connection-factory="connectionFactory"/>

    <int-jms:inbound-channel-adapter channel="processTask"
                                     destination-name="${queue.process.tasks}" message-converter="messageConverter"
                                     receive-timeout="${queue.receive.timeout}" connection-factory="connectionFactory"/>

    <int:service-activator id="taskActivator"
                           input-channel="processTask"
                           ref="messageHandler" method="processTask"/>
    
    <int-jms:inbound-channel-adapter channel="reprocessSubmit"
                                     destination-name="${queue.process.submitreprocess}" message-converter="messageConverter"
                                     receive-timeout="${queue.receive.timeout}" connection-factory="connectionFactory"/>

    <!-- service que sera activado cuando un mensaje llegue a la queue -->
    <int:service-activator id="reprocessSubmitActivator"
                           input-channel="reprocessSubmit"
                           ref="messageHandler" method="reprocessSubmit"/>

    <int-jms:outbound-channel-adapter channel="sendService"
                                      destination-name="${queue.process.sendservice}" message-converter="messageConverter"
                                      time-to-live="${queue.message.timetolive}" explicit-qos-enabled="true"
                                      connection-factory="connectionFactory"/>

    <int-jms:inbound-channel-adapter channel="reprocessService"
                                     destination-name="${queue.process.sendservice}" message-converter="messageConverter"
                                     receive-timeout="${queue.receive.timeout}" connection-factory="connectionFactory"/>

    <int:service-activator id="reprocessServiceActivator"
                           input-channel="reprocessService"
                           ref="messageHandler" method="reprocessService"/>

    <!-- pooler -->
    <int:poller id="poller" default="true" fixed-delay="100"/>
</beans>


